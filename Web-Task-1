<!DOCTYPE html>
<html>
<head>
    <title>To-Do List</title>
    <style>
        body {
            background-color: rgb(231, 24, 24);
            color: white;
            font-family: Arial, sans-serif;
            margin: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        h1 {
            text-align: center;
            margin: 20px 0;
        }
        #todo-container {
            display: flex;
            justify-content: center;
            width: 100%;
            margin-bottom: 20px;
        }
        #todo-input {
            width: 70%;
            padding: 10px;
            border: none;
            border-radius: 5px;
            font-size: 16px;
        }
        #add-button {
            padding: 10px;
            border: none;
            border-radius: 5px;
            background-color: #4CAF50;
            color: white;
            cursor: pointer;
            font-size: 16px;
            margin-left: 10px;
        }
        #todo-list {
            list-style: none;
            padding: 0;
            width: 100%;
            max-width: 600px;
            margin: 0;
        }
        .todo-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: #222;
            padding: 10px;
            border-radius: 5px;
            margin: 5px 0;
        }
        .todo-item.completed {
            text-decoration: line-through;
            color: grey;
        }
        .remove-button {
            background: red;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            padding: 5px;
        }
        .check-button {
            background: green;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            padding: 5px;
            margin-right: 10px;
        }
    </style>
</head>
<body>
    <h1>To-Do List</h1>
    <div id="todo-container">
        <input type="text" id="todo-input" placeholder="What do you need to do?" />
        <button id="add-button">ADD</button>
    </div>
    <ul id="todo-list"></ul>
    <script>
        const addButton = document.getElementById('add-button');
        const todoInput = document.getElementById('todo-input');
        const todoList = document.getElementById('todo-list');
        addButton.addEventListener('click', function() {
            const todoText = todoInput.value.trim();
            if (todoText) {
                const todoItem = document.createElement('li');
                todoItem.className = 'todo-item';
                todoItem.innerHTML = `
                    <div style="display: flex; align-items: center;">
                        <button class="check-button">âœ”</button>
                        <span>${todoText}</span>
                    </div>
                    <button class="remove-button">X</button>
                `;
                todoItem.querySelector('.check-button').addEventListener('click', function() {
                    todoItem.classList.toggle('completed');
                });
                todoItem.querySelector('.remove-button').addEventListener('click', function() {
                    todoList.removeChild(todoItem);
                });
                todoList.appendChild(todoItem);
                todoInput.value = '';
            }
        });
    </script>
</body>
</html>
